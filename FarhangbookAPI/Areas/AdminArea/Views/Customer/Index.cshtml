                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-10 mb-lg-0">
                                <div class="col-md-12 fv-row">
                                    <label class="required fs-6 fw-semibold fw-bold mb-2 text-dark">کد اشتراک</label>
                                    <input type="text" id="CodeCustomer" name="CodeCustomer" class="form-control form-control-solid" autocomplete="off" placeholder="کد اشتراک مشتری خود را وارد نمایید.">
                                </div>
                            </div>
                            <div class="col-lg-8 mb-10 mb-lg-0">
                                <!--begin::Tags-->
                                <div class="me-5 col-lg-12 fv-row">
                                    <label class="required fs-6 fw-semibold fw-bold mb-2 text-dark">آدرس</label>
                                    <input type="text" id="Address" name="Address" class="form-control form-control-solid" autocomplete="off" placeholder="آدرس مشتری را وارد نمایید.">
                                </div>
                                <!--end::Tags-->
                            </div>
                        </div>
                        <input id="UserID" name="UserID" value="@ViewBag.UserID" hidden />
                    </div>
                    <!--end::Inputs-->
                    <!--begin::Actions-->
                    <div class="text-center">
                        <button id="btnAddCustomer" class="btn btn-sm btn-primary me-3"><i class="ki-duotone ki-plus fs-2"></i><span class="indicator-label">ثبت اطلاعات</span></button>
                        <button type="button" class="btn btn-sm btn-light-dark me-3" data-bs-dismiss="modal">انصراف</button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end:Form-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
