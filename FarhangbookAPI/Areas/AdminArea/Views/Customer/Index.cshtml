                                    <i class="ki-duotone ki-plus fs-2"></i>
                                    ثبت مشتری جدید
                                </button>
                                <!--end::Add customer-->
                            </div>
                            <!--end::Toolbar-->
                        </div>
                        <!--end::کارت toolbar-->
                    </div>
                    <!--end::Toolbar-->
                    <!--begin::TABELS-->
                    <table id="customerDatatable" class="table text-center table-rounded table-striped border table-row-bordered gy-5 gs-7">
                        <thead>
                            <tr class="fw-semibold fs-6">
                                <th class="fw-semibold fw-bolder text-center fs-6">ردیف</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">نام</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">نام خانوادگی</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">موبایل</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">مشتری</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">پایه</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">کد اشتراک</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">متولّد</th>
                                <th class="fw-semibold fw-bolder text-start fs-6">آدرس</th>
                                <th class="fw-semibold fw-bolder text-center fs-6">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@counterCustomer</td>
                                    <td class="text-center">@item.FirstName</td>
                                    <td class="text-center">@item.LastName</td>
                                    <td class="text-center">@item.Mobile</td>
                                    <td class="text-center">@item.TypeCustomer.TypeCustomerName</td>
                                    <td class="text-center">@item.GradeStudent.GradeName</td>
                                    <td class="text-center"><span class="badge badge-light-success text-center" style="margin-top: 0px;">@item.CodeCustomer</span></td>
                                    <td class="text-center">@convertDate.ConvertMiladiToShamsi(item.BirthdayDate, "yyyy/MM/dd")</td>
                                    <td class="text-start">@item.Address</td>
                                    <td class="justify-content-start flex-shrink-0">
                                        <!--begin::Icon-->
                                        <div>
                                            <!--begin::ویرایش-->
                                            <a href="#" class="bg-hover-light-warning text-hover-warning btn btn-icon btn-color-muted btn-bg-light btn-active-color-primary btn-sm me-3" data-bs-toggle="tooltip" title="ویرایش" onclick="showEditInfoCustomer(@item.CustomerID)">
                                                <i class="ki-outline ki-pencil fs-3"></i>
                                            </a>
                                            <!--end::ویرایش-->
                                            <!--begin::غیرفعال سازی-->
                                            <a href="#" class="bg-hover-light-danger text-hover-danger btn btn-icon btn-color-muted btn-bg-light btn-active-color-danger btn-sm me-3" data-bs-toggle="tooltip" title="حذف کردن" onclick="showDeleteInfoCustomer(@item.CustomerID)">
                                                <i class="ki-outline ki-trash fs-3"></i>
                                            </a>
                                            <!--begin::غیرفعال سازی-->
                                        </div>
                                        <!--end::Icon-->
                                    </td>
                                </tr>
                                counterCustomer++;
                            }
                        </tbody>
                    </table>
                    <div id="kt_datatable_example_buttons" class="d-none"></div>
                    <!--end::TABELS-->
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="text-muted mt-1 fw-semibold fs-7">لیست مشتری های موجود : <b class="badge badge-light-success fw-bolder" data-bs-toggle="tooltip" title="تعداد مشتری های ثبت شده"> @Model.Count() </b> می باشد. </span>
                            </h3>
                        </div>
                    </div>
                </div>
                <!--end::body-->
            </div>
            <!--end::engage widget 1-->
        </div>
        <!--end::col-->
    </div>
    <!--end::row-->
</div>
<!--end::content container-->
